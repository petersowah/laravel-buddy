{
    "name": "petersowah/laravel-buddy",
    "description": "A simple cli tool for getting started on Laravel projects",
    "keywords": ["framework", "laravel-buddy", "buddy", "console", "cli"],
    "homepage": "https://github.com/petersowah",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/petersowah/laravel-buddy/issues",
        "source": "https://github.com/petersowah/laravel-buddy"
    },
    "authors": [
        {
            "name": "Peter Sowah",
            "email": "petersowah@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "laminas/laminas-text": "^2.9",
        "laravel-zero/phar-updater": "^1.2",
        "nunomaduro/laravel-console-menu": "^3.3"
    },
    "require-dev": {
        "laravel-zero/framework": "^9.0",
        "mockery/mockery": "^1.4.2",
        "pestphp/pest": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/laravel-buddy"]
}
